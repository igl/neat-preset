{
    "private": true,
    "homepage": "https://github.com/igl/neat-preset",
    "repository": {
        "type": "git",
        "url": "https://github.com/igl/neat-preset"
    },
    "scripts": {
        "lint": "yarn lerna run --stream --parallel lint",
        "bump": "lerna publish --message 'chore(release): :rocket:' --no-commit-hooks --yes"
    },
    "workspaces": {
        "packages": [
            "pkgs/*"
        ]
    },
    "devDependencies": {
        "lerna": "^3.20.2",
        "next": "9.2.0",
        "prettier": "*"
    },
    "prettier": "./prettier.config.js",
    "changelog": {
        "repo": "igl/neat-preset",
        "cacheDir": "tmp/.changelog",
        "labels": {
            "fix": ":fix: Bug Fixes",
            "feat": ":feat: New Features",
            "chore": ":broom: House Keeping",
            "docs": ":pencil: Documentation",
            "style": ":nail_care: Styling",
            "refactor": ":construction: Refactored",
            "test": ":heavy_check_mark: Tests",
            "build": ":truck: Build",
            "ci": ":shipit: Release",
            "revert": ":back: Revert"
        }
    }
}
