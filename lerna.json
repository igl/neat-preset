{
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": ["pkgs/*"],
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": [
                "**/tmp/**",
                "pkgs/**/dist/**",
                "pkgs/**/test/**",
                "pkgs/**/tests/**",
                "pkgs/**/__fixtures__/**",
                "pkgs/**/__mocks__/**",
                "pkgs/**/__tests__/**",
                "**/*.md",
                "**/*.spec.ts",
                "**/*.spec.js"
            ]
        },
        "version": {
            "allowBranch": ["master"],
            "message": "chore(release): :rocket:"
        }
    }
}
